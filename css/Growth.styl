.growth-feature
  position relative
  padding-left 52px
  max-width 350px
  margin-bottom 40px
  h3
   font-size 16px
   line-height 26px
   font-weight 400 
   margin 0
   margin-bottom 8px
  p
    font-size 14px
    line-height 20px
    font-weight 300
    
  img
    position absolute
    top 4px
    left 32px
    transform translate3d(-100%,0,0)
    max-height 32px
    max-width 32px


        
@media only screen and (max-width: $sm-viewport)
  .growth-feature
    padding-left 56px
    img
      left 38px